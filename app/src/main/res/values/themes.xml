<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Todolist" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#0097A7</item>
        <item name="colorPrimaryVariant">#0288D1</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#0097A7</item>
        <item name="colorSecondaryVariant">#0097A7</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#0097A7</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/ibmplexsans_regular</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.Auth" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#0097A7</item>
        <item name="colorPrimaryVariant">#0288D1</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#0097A7</item>
        <item name="colorSecondaryVariant">#0097A7</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/ibmplexsans_regular</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>